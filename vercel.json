{
  "version": 2,
  "routes": [
    {
      "src": "/backup",
      "dest": "/api/backup"
    },
    {
      "src": "/proxy/ai",
      "dest": "/api/proxy/ai"
    },
    {
      "src": "/proxy/data.json",
      "dest": "/api/proxy/data.json"
    },
    {
      "src": "/proxy",
      "dest": "/api/proxy"
    },
    {
      "src": "/health",
      "dest": "/api/health"
    },
    {
      "src": "/",
      "dest": "/api/index"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    },
    "api/*.js": { "runtime": "nodejs20.x" }
  },
  "crons": [
    { "path": "/api/backup/cron/backup", "schedule": "* * * * *" }
  ]
}
